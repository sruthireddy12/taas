
<label><%= t("activerecord.attributes.user.username", :default => t("activerecord.labels.username", :default => "User Name")) %> : </label>
<%= @user.username %><p/>
<label><%= t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email")) %> : </label>
<%= @user.email %>



<div class="form-actions">
<%= link_to "Back", admin_users_path, :class => 'btn btn-sm btn-primary'  %>
<%= link_to "Edit", edit_admin_user_path(@user), :class => 'btn btn-sm btn-primary' %>
<% unless current_user == @user%>
<%= link_to "Delete", admin_user_path(@user), :method => "delete", :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-primary btn-sm' %>
<%end%>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <%= f.fields_for :organization do |of|%>
    <div class="field">
      <%= of.label :name %><br />
      <%= of.text_field :name, autocomplete: "off" %>
    </div>
  <%-end %>

   <%= f.fields_for :profile,@user.build_profile do |profile|%>

    <div class="field">
      <%= profile.label :first_name %><br />
      <%= profile.text_field :first_name, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= profile.label :last_name %><br />
      <%= profile.text_field :last_name, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= profile.label "how do you hear about us?" %><br />
      <%= profile.text_field :referred_by, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= profile.label :mobile_number %><br />
      <%= profile.text_field :mobile_number, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= profile.label :telephone_number %><br />
      <%= profile.text_field :telephone_number, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= profile.label :gender %><br />
      <%= profile.select :gender, options_for_select(['Male','Female']), autocomplete: "off" %>
    </div>

  <%-end %>
  <%= f.simple_captcha%>

<% end %>
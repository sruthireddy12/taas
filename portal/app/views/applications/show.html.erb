<p id="notice"><%= notice %></p>
<table class="tbl-2" width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <th colspan="4">Application Information</th>
  </tr>
  <tr>
    <td align="right"><b>Application Name</b></td>
    <td ><%= @application.name %></td>
    <td  align="right"><b> Point of Contact </b></td>
    <td ><%= @application.point_of_contact %></td>
  </tr>
  <tr>
    <td align="right"><b> URL </b></td>
    <td><%= @application.url %></td>
    <td align="right"><b> Email </b></td>
    <td><%= @application.email %></td>
  </tr>
  <tr>
    <td align="right"><b> Description </b></td>
    <td rowspan="2" valign="top"><%= @application.description %></td>
    <td align="right"><b> Preferred Time </b></td>
    <td><%= @application.prefered_contact_time.strftime("%H:%M %p") %></td>
  </tr>
  <tr></tr>
  <% unless @application.attachments.blank? %>
    <tr>
      <th colspan="4">Application Attachments</th>
    </tr>
    <tr>
      <%@application.attachments.each do |attachment|%>
        <td><%#=link_to attachment.file_path.file.filename, attachment.file_path_url%>
        <a href="<%= attachment.file_path_url%>" download><%= attachment.file_path.file.filename%></a></td>
      <%end%>
    </tr>
  <%end%>
  <% unless @application.attachments.blank? %>
    <tr>
      <th colspan="4">Login Information</th>
    </tr>
    <%@application.credentials.each do |credential|%>
      <tr>
        <td ><label><b>Role : </b> </label><%= credential.role %></td>
        <td ><label><b>UserName : </b> </label><%= credential.username %></td>
        <td ><label><b>Password : </b> </label><%= credential.password %></td>
      </tr>
      <%unless credential.attachments.empty?%>
        <tr>
          <%credential.attachments.each do |attachment|%>
            <td ><%#= link_to attachment.file_path.file.filename, attachment.file_path_url, target: "_blank" %>
            <a href="<%= attachment.file_path_url%>" download><%= attachment.file_path.file.filename%></a></td>
          <%end%>
        </tr>
      <%end%>
      <tr>
        <th colspan="4"></th>
      </tr>
    <%end%>
  <%end%>
</table>
<%#= link_to 'Edit', edit_application_path(@application) %> |
<%#= link_to 'Back', applications_path %>

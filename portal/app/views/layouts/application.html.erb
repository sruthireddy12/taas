            </li>
            <li>
              <label><a href="#">Large Text Goes Here</a></label>
            </li>
            <li>
              <label><a href="#">Account Settings</a></label>
            </li>
            <li>
              <label><a href="#">Links</a></label>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <%= yield %>
  </div>
</div>
<div class="footer"> Copyright 2014 Â· All rights reserved </div>
<script>
  function submitForm() {
      $(this).find("form").submit();
  }

  $("#change_password").on("click", function (e){
    e.preventDefault();
    var tag = $("<div id='paasword_change'></div>"),
      url = $(this).attr('href');
    $.ajax({
      url: url,
      success: function(data) {
        tag.html(data).dialog({modal: true,
          height: 400,
          width: 700,
          title: 'Edit Password',
          buttons: [
            {
              text: "Save Password",
              "class": 'btn-style',
              click: submitForm
            },
            {
              text: "Cancel",
              "class": 'btn-style-2',
              click: function() {
                $(this).dialog("close")
              }
            },
          ]
        }).
        dialog('open');
      }
    });
  });
</script>
</body>
</html>